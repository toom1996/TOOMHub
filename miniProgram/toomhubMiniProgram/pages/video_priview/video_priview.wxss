.page {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding-bottom: 130rpx;
  background-color: #000;
}

.player-wrapper {
  width: 100%;
  position: relative;
  top: 0;
  left: 0;
}

.clipper-wrapper {
  margin-top: 20rpx;
}

.footer-wrapper {
  position: absolute;
  width: 100%;
  height: 130rpx;
  padding: 20rpx 30rpx 0 30rpx;
  bottom: 0rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.selected-time{
  font-size: 28rpx;
  color: #fff;
}
.next-button {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 100rpx;
  font-size: 28rpx;
  background-color: #ff584c;
  color: #fff;
  z-index: 9999;
}