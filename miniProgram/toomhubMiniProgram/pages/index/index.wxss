.search-con .search-img image {
  width: 15px;
  height: 15px;
}

.toom__tag {
  top: var(--toomhub__tabs-top);
}


.loading{  
   padding: 10rpx;  
   text-align: center;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  /* background: url(../../images/icon-loading.png) no-repeat;   */
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  

.loading.complete:before{  
  display: none;  
}