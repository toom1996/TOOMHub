.box {
}

.operatingBar {
  /* border-top:1rpx solid  #ccc!important; */
  background-color: white;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  padding: 20rpx 0rpx 30rpx 0rpx;
}

.operatingBar text {
  font-size: x-small
}

.video {
  width:100%;
}

.share-button {
  position: none;
  margin-left: 0px;
  margin-right: 0px;
  padding: 0px;
  box-sizing: border-box;
  font-size: x-small;
  text-align: center;
  text-decoration: none;
  line-height: 30px;
  border-radius: unset;
  border:none;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  cursor: pointer;
  background-color:transparent;
}

button::after{
  border: none;
}

.post_box {
  display: flex;
  box-sizing: border-box;
  width: auto;
  padding: var(--skeleton-padding,0 16px);
  background-color: white;
  /* margin: 0 30rpx; */
  /* padding-bottom: 40rpx 0rpx 40rpx 0rpx; */
  margin-bottom: 20rpx;
}

.post_box .top {
  padding-bottom: 30rpx;
}

.post_box .top__avatar image {
  margin-right: var(--padding-md,16px);
  width: 70rpx;
  height: 70rpx;
  border-radius: 25px;
}


.post_box .__content {
  -webkit-flex: 1%;
  flex: 1;
  font-size: 80%;
  margin: 30rpx 0rpx 30rpx 0rpx;
}

.__content image{
  width: 220rpx;
  height: 220rpx;
}

.post_box .__attach {
  -webkit-flex: 1%;
  flex: 1;
}

.post_box .__username {
  width: 40%;
  margin: 0;
  height: var(--skeleton-row-height,16px);
  background-color: #f2f3f5;
}

.post_box .__row {
  width: 100%;
  margin-top: 20px;
  height: var(--skeleton-row-height,16px);
  background-color: #f2f3f5;
}

.post_box .font__username {
  font-weight: 600;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

.post_box .font__tag {
  color: #c3c3c3;
}

.post_box .font__time {
  font-weight: 100;
  font-size: 20rpx;
  display:block;
}

.add {
  position: fixed;
  bottom: 80rpx;
  right: 50rpx;
  z-index: 9999;
}


.toomhub__square-tag {
  margin-top: 10rpx;
  padding: 5px 10px 5px 10px !important;
}

.content-image {
  /* border-radius: 10px; */
}


.navbar {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  flex-shrink: 0;
  background: #FFFFFF;
}
 
.navbar-title {
  width: 100%;
  box-sizing: border-box;
  padding-left: 10px;
  padding-right: 120px;
  height: 33px;
  line-height: 33px;
  /* text-align: center; */
  /* position: absolute; */
  position: fixed;
  left: 0;
  z-index: 10;
  color: #333;
  font-size: 16px;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display:flex;
}
 
.navbar-action-wrap {
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  /* position: absolute; */
  left: 10px;
  z-index: 11;
  line-height: 1;
  padding-top: 6px;
  padding-bottom: 4px;
  position: fixed;
}
 
.navbar-action-group {
  /* border: 1px solid #f0f0f0; */
  border-radius: 20px;
  overflow: hidden;
}
 
.navbar-action_item {
  padding: 3px 0;
  color: #333;
}
 
.navbar-action-group .navbar-action_item {
  border-right: 1px solid #f0f0f0;
  padding: 3px 14px;
}
 
.navbar-action-group .last {
  border-right: none;
}
 
.navbar-title-size {
  font-size: 10px;
  margin-right: 20rpx;
  align-self: center;
  margin: 0 auto;
}
 
.navbar-title-size.active {
  color:red;
  border-bottom: 2px solid red;
}
.scroll-box {
  position: absolute;
  height:100%; 
  /* margin-top:60rpx; */
}
